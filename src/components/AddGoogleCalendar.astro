---
import Translations from "../translations/translations.json";

const response = await fetch(
    `https://${Astro.url.host}/translations/${
        Astro.url.searchParams.get("lang") || Translations[0]
    }.json`
);
const data = await response.json();
---

<a
    type="button"
    href="https://calendar.google.com/calendar/r/eventedit?text=Hack+SP&dates=20230602T133000Z/20230602T133000Z&details=Hackathon"
    style="font-family: 'JetBrains Mono', monospace;"
    class="btn btn-secondary btn_txt">{data["buttons.add_google"]}</a
>
